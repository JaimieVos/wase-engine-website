{% extends 'base/base.html.twig' %}

{% block title %}Builds{% endblock %}

{% block body %}

    <h1>Builds</h1>

        <table>
            <thead>
                <th>Name</th>
                <th>Release date</th>
                <th>Downloads</th>
            </thead>
            <tbody>
                {% for release in releases %}
                    <tr>
                        <td>{{ release.name }}</td>
                        <td>{{ release.published_at | date('d M Y, H:i:s') }}</td>
                        <td><a href="{{ release.zipball_url }}">{{ release.name }}</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

{% endblock %}
